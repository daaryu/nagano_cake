<main>
<div class="container">
  <div class="row">
   <h2>会員情報編集</h2>
   </div>
<%= form_with model: @customer, url:customer_path(current_customer.id), local: true do |f| %>

  <div class="row">
      <div class="col-4">
       <td>名前</td>
      </div>
      <div class="col-4">
         <%= f.label :last_name, "(姓)" %>
         <%= f.text_field :last_name, autocomplete: "佐藤" %>
      </div>
      <div class="col-4">
          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name %>
      </div>

  </div>
    <div class="row">
      <div class="col-4">
       <td>フリガナ</td>
      </div>
      <div class="col-4">
         <%= f.label :last_name_kana, "(セイ)" %>
         <%= f.text_field :last_name_kana, autocomplete: "佐藤" %>
      </div>
      <div class="col-4">
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana %>
      </div>
  </div>


  <div class="row">
    <div class="col-4">
    <%= f.label :email, "メールアドレス" %><br />
    </div>
    <div class="col-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
    </div>
    <div class="col-3">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
    <%= f.label :address, "住所" %>
    </div>
    <div class="col-3">
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
    <%= f.label :telephone_number, "電話番号" %>
    </div>
    <div class="col-3">
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <button class="btn btn-success">変更を保存</button>
    </div>
    <div class="col">
       <%= link_to customers_unsubscribe_path do %>
       <button class="btn btn-danger">退会する</button>
       <% end %>
    </div>

  </div>
  <% end %>





</div>
</main>
