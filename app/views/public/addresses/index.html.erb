<main>
  <div class="integer">
    <div class="row">
      <div class="col-5 text-center bg-light">配送先登録/一覧</div>
    </div>
    <%= form_with model: @address, url:addresses_path, local: true do |f| %>
    <div class="row">
      <div class="col-2 offset-1">郵便番号(ハイフンなし)</div>
      <div class="col-4"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %> </div>
    </div>
     <div class="row">
      <div class="col-2 offset-1">住所</div>
      <div class="col"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
    </div>
    <div class="row">
      <div class="col-2 offset-1">宛名</div>
      <div class="col-4"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
      <div class="col-5">
          <%= f.submit %>
      </div>
    </div>
    <% end %>
       <div>
          <table class="table table-bordered">
              <thead>
                  <th style="width: 15%">郵便番号</th>
                  <th style="width: 40%">住所</th>
                  <th style="width: 15%">宛名</th>
                  <th styls="width: 30%"></th>
              </thead>
              <% @addresses.each do |address| %>
              <tbody>
                  <tr>
                    <td><%= address.postal_code %></td>
                    <td><%= address.address %></td>
                    <td><%= address.name %></td>
                    <td>
                      <%= link_to edit_address_path(address.id) do %>
                      <button class="btn btn-success">編集する</button>
                      <% end %>
                      <%= link_to address_path(address.id), method: :delete do %>
                      <button class="btn btn-danger">削除する</button>
                      <% end %>
                    </td>
                  </tr>
              </tbody>
              <% end %>
          </table>
        </div>



  </div>
</main>