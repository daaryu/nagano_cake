<main>
<div class="container">
  <div class="row">
   <h2>新規会員登録</h2>
   </div>
<%= form_with model: @public, url: new_customer_registration_path, local: true do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>

  <div ="row">
      <div class="col">
       <td>名前</td>
      </div>
      <div class="col">
        <div class="filed">
         <%= f.label :first_name "(姓)" %>
         <%= f.text_filed :first_name, autocomplete: "佐藤" %>
        </div>
      </div>
      <div class="col">
        <div class="filed">
          <%= f.label :last_name "(名)" %>
          <%= f.text_filed :last_name %>
        </div>
      </div>


  </div>


  <div class="field">
    <%= f.label :email "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">

    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
<%= render "publics/shared/links" %>
</main