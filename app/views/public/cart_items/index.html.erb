<main>
  <div class="container">
    <div class="row">
      <div class="col-md-4 text-center bg-light ">
      <h3>ショッピングカート</h3>
      </div>
      <div class="col-md-7 text-right">
        <%= link_to cart_items_destroy_all_path, method: :delete do %>
        <button class="btn btn-danger">カートを空にする</button>
        <% end %>
      </div>
    </div>

      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th width=40%>商品名</th>
              <th width=15%>単価(税込)</th>
              <th width=15%>数量</th>
              <th width=15%>小計</th>
              <th width=15%></th>

            </tr>
          </thead>
          <tbody>
            <% @sum = 0 %>
            <% @cart_items.each do |cart_item| %>
             <tr>
               <td>
                 <%= cart_item.item.name %>
               </td>
              <td>
                <%= (cart_item.item.price * 1.1).floor %>
              </td>
              <td>
                 <%= form_with model: cart_item, url:cart_item_path(cart_item), local: true do |f| %>
                  <%= f.select(:amount, 1..20) %>
                  <%= f.submit "変更", class:"btn btn-success" %>
                 <% end %>
              </td>
              <td>
                <% @sum += (cart_item.item.price * 1.1).floor * cart_item.amount %>
                <%=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
              </td>
              <td>
                <%= link_to cart_item_path(cart_item), method: :delete do %>
                <button class="btn btn-danger">削除する</button>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

        </div>
        <div class="row">
          <div class="col-md-5">
            <%= link_to items_path do %>
            <button class="btn btn-info">買い物を続ける</button>
            <% end %>
          </div>
          <div class="col-md-5 text-right">
            <table>
              <tr>
                <th>合計</th>
                <td><%= @sum %></td>
              </tr>
            </table>
          </div>
        </div>

    </div>
  </div>
  </div>
</main>