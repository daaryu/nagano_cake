<main>
<div class="container">
  <div class="row">
   <h2>新規会員登録</h2>
   </div>
<%= form_with model: @customer, url:customer_registration_path, local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  
  <div class="row">
      <div class="col-4">
       <td>名前</td>
      </div>
      <div class="col-4">
         <%= f.label :last_name, "(姓)" %>
         <%= f.text_field :last_name, autocomplete: "佐藤" %>
      </div>
      <div class="col-4">
          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name %>
      </div>
  
  </div>
    <div class="row">
      <div class="col-4">
       <td>フリガナ</td>
      </div>
      <div class="col-4">
         <%= f.label :last_name_kana, "(セイ)" %>
         <%= f.text_field :last_name_kana, autocomplete: "佐藤" %>
      </div>
      <div class="col-4">
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana %>
      </div>
  </div>


  <div class="row">
    <div class="col-4">
    <%= f.label :email, "メールアドレス" %><br />
    </div>
    <div class="col-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-4">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
    </div>
    <div class="col-3">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-4">
    <%= f.label :address, "住所" %>
    </div>
    <div class="col-3">
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-4">
    <%= f.label :telephone_number, "電話番号" %>
    </div>
    <div class="col-3">
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>



  <div class="row">
    <div class="col-4">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    </div>
    <div class="col-4">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row">
  <div class="col-4">
    <%= f.label :password_confirmation, "パスワード確認用" %><br />
    </div>
    <div class="col-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  
<%= render "customers/shared/links" %>
<% end %>
</div>
</main>
