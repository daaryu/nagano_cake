<main>
  <div class="container">
    <div class="row">
      <h2>ログイン</h2>
    </div>
    <div class="row">
      <div class="col-3 text-center bg-light"><h6>会員の方はこちらからログイン</h6></div>
    </div>
     <%= form_with model: @customer, url:customer_session_path, local: true do |f| %>

  <div class="row">
    <div class="col text-center">
      <%= f.label :email, "メールアドレス" %>
      </div>
    <div class="col">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  </div>

 <div class="row">
    <div class="col text-center">
      <%= f.label :password , "パスワード" %>
      </div>
    <div class="col">
    <%= f.password_field :password , autofocus: true, autocomplete: "current-password" %>
  </div>
  </div>


  <div class="row">
    <div class="col text-center">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-3 text-center bg-light">
    <h6>会員登録がお済みでない方</h6>
  </div>
</div>
<div class="row">
  <div class="col">
<%= render "customers/shared/links" %>
</div>
</div>
  </div>
</main>

