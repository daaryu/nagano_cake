<main>
  <div class="container" >
    <div class="row">
      <h2>管理者ログイン</h2>
    </div>
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
     <div class="row center-block">
      <div class="col-lg-4 col-lg-offset-2"> <%= f.label "メールアドレス" %></div>
      <div class="col-lg-6">  <%= f.email_field :email, autofocus: true, autocomplete: "email"  %></div>
     </div>

     <div class="row">
       <div class="col-lg-4"> <%= f.label "パスワード" %></div>
       <div class="col-lg-8"><%= f.password_field :password, autocomplete: "current-password" %></div>
     </div>

     <div class="row center">
        <div class="actions"><%= f.submit "ログイン" , class: "btn btn-primary" %></div>
     </div>
    <% end %>
  </div>
</main>



