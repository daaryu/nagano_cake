<main>
  <div class="container">
    <div class="row">
      <div class="col-4 text-center bg-light">
      <h3>注文履歴一覧</h3>
      </div>
    </div>
    <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
             <tr>
               <td>
                 <%= link_to order.created_at, admin_order_path(order.id) %>
               </td>
              <td>
                <%= order.customer.first_name %><%= order.customer.last_name %>
              </td>
              <td>
                <% @sum = 0 %>
                <% order.order_details.each do |order_detail| %>
                <% @sum += order_detail.amount %>
                <% end %>
                <%= @sum %>
              </td>
              <td>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</main>