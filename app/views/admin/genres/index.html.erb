<main>
  <div class="container">
    <div class="row">
      <div class="col-4 text-center bg-light">
      <h4>ジャンル一覧・追加</h4>
      </div>
    </div>
    <div class="row">
      <%= form_with model:@genre,url:admin_genres_path, local:true do |f| %>
        <div class="form_group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name %>
          <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>
        <% end %>
        </div>

      <div class="row">
        <div class="col-5"></div>
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
             <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
              <%= link_to edit_admin_genre_path(genre.id) do %>
               <button class="btn btn-success">編集する</button>
              <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        </div>
       
        </div>


 



  </div>
</main>