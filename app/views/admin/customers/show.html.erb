<main>
  <div class="container">
    <div class="row">
      <div class="col-4 text-center bg-light">
      <h3>会員詳細</h3>
      </div>
    </div>
    <div class="col-8">
      <table>
        <tr>
          <td>会員ID</td>
          <td><%= customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= customer.first_name %><%= customer.last_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= customer.first_name_kana %><%= customer.last_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= customer.email %></td>
        </tr>
      </table>
    </div>
    <div class="row">
      <div class="col-6">
        <%= link_to edit_admin_customer_path do %>
        <button class="btn btn-success">編集する</button>
        <% end %>
      </div>
    </div>



  </div>
</main>