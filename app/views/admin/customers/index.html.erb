<main>
  <div class="container">
    <div class="row">
      <div class="col-4 text-center bg-light">
      <h4>会員一覧</h4>
      </div>
    </div>
    <div class="row">

        <table class="table">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th colspan="3"></th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
             <tr>
               <td>
                 <%= customer.id %>
               </td>
              <td>
                <%= link_to  admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td>
                <%= customer.email %>
              </td>

            </tr>
            <% end %>
          </tbody>

        </table>


    </div>



  </div>
</main>