<main>
  <div class="container">
    <div class="row">
      <h3>商品編集</h3>
    </div>
    <%= form_with model:@item, url:admin_item_path(@item) local:true do |f| %>
        <div class="form_group">
          <label for="item_image">商品画像</label>
          <%= f.file_field :image_id %>
        </div>
         <div class="form_group">
          <label for="item_name">商品名</label>
          <%= f.text_field :name %>
         </div>
          <div class="form_group">
          <label for="item_introduction">商品説明</label>
          <%= f.text_field :introduction %>
         </div>
         <div>
           <div class="form_group">
          <label for="genre">ジャンル</label>
          
         </div>
         <div class="form_group">
          <label for="item_price">税抜価格</label>
          <%= f.text_field :price %>円
         </div>
         <div class="row">
           <%= f.submit '変更を保存', class:"btn btn-success" %>
         </div>

      <% end %>
  </div>
</main>