<main>
  <div class="container">
    <div class="row">
      <div class="col-4 text-center bg-light">
      <h3>商品詳細</h3>
      </div>
    </div>
    <div class="row">
    <div class="col-4">
      <div>
        <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: 'no_image.jpg', size:"200x200" %>
      </div>
    </div>
    <div class="col-8">
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格</td>
          <td><%= @item.price %></td>
        </tr>
      </table>
    </div>
    </div>
    <div class="row">
      <div class="col-9 text-center">
      <%= link_to edit_admin_item_path do %>
       <button class="btn btn-success">編集する</button>
       <% end %>
       </div>
    </div>



  </div>
</main>