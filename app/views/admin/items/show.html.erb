<main>
  <div class="container">
    <div class="row">
      <h3>商品詳細</h3>
    </div>
    <div class="col-4">
      <div>
        <%= attachment_image_tag item, :image_id, :fill, 100, 100, format: 'jpeg' %>
      </div>
    </div>
    <div class="col-8">
      <table>
        <tr>
          <td>商品名</td>
          <td><%= item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= item.price %></td>
        </tr>
      </table>
    </div>
    <div class="row">
      <%= link_to edit_admin_item_path do %>
       <button class="btn btn-success">編集する</button>
    </div>



  </div>
</main>