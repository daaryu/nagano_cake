<main>
  <div class="container">
    <div class="row">
      <h3>商品一覧</h3>
    </div>
    <div class="row">

        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th colspan="3"></th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
             <tr>
               <td>
                 <%= item.id %>
               </td>
              <td>
                <%= link_to 'item.name', admin_item_path(item.id) %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td>
                <%= item.genre %>
              </td>

            </tr>
            <% end %>
          </tbody>

        </table>


    </div>



  </div>
</main>