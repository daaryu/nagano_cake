<main>
  <div class="container">
    <div class="row">
      <div class="col-4 text-center bg-light">
      <h3>注文詳細</h3>
      </div>
    </div>
    <div class="row">
      <div class="col">購入者</div>
      <div class="col"><%= link_to 'customer.first_name.last_name', admin_customer_path(@customer.id)%></div>
    </div>
    <div class="row">
      <div class="col">注文日</div>
      <div class="col"><%= @order.created_at%></div>
    </div>
    <div class="row">
      <div class="col">配送先</div>
      <div class="col"><%= @order.address %></div>
    </div>
    <div class="row">
      <div class="col">''</div>
      <div class="col"><%= @order.name %></div>
    </div>
    <div class="row">
      <div class="col">支払方法</div>
      <div class="col"><%= @order.payment_method %></div>
    </div>


    <div class="row">
      <div class="col">
        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th colspan="3"></th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.each do |order| %>
             <tr>
               <td>
                <%= order.item.name %>
               </td>
              <td>
                <%= order.item.price %>
              </td>
              <td>
                <%= orderitem.amount %>
              </td>
              <td>
                <%= order.total_payment %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        </div>

        </div>
    </div>
  </div>
</main>